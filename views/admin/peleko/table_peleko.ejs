<!-- DataTales Example -->
<div class="card mb-4">
	<div class="card-header py-3">
		<!-- Button trigger modal -->
		<a href="/admin/peleko/tambah" class="btn btn-primary">Tambah peleko</a>
	</div>
	<div class="card-body">
		<div class="table-responsive">
			<table class="table" id="dataTable" width="100%" cellspacing="0">
				<thead>
					<tr>
						<th style="width: 50px;">No</th>
						<th>Nama</th>
						<th style="width: 100px;">Action</th>
					</tr>
				</thead>
				<tbody>
					<% for( let i = 0; i < peleko.length; i++ ) { %>
					<tr>
						<td><%= i + 1 %></td>
						<td><%= peleko[i].nama %></td>
						<td>
							<form action="/admin/peleko/<%= peleko[i].id %>?_method=DELETE" method="POST">
								<button
									type="button"
									class="btn btn-icon btn-warning btn-circle btn-sm btn-update-peleko"
									data-toggle="modal"
									data-target="#edit-modal-peleko"
									data-id="<%= peleko[i].id %>"
									data-name="<%= peleko[i].nama %>"
								>
									<i class="fas fa-edit"></i>
								</button>
								<button
									type="button"
									data-toggle="modal"
									data-target="#delete-modal-peleko"
									data-id="<%= peleko[i].id %>"
									class="btn btn-icon btn-danger btn-circle btn-sm btn-delete-peleko"
								>
									<i class="fas fa-trash"></i>
								</button>
							</form>
						</td>
					</tr>
					<% } %>
				</tbody>
			</table>
		</div>
	</div>
</div>
