<div class="tab-pane fade" id="activity-item" role="tabpanel" aria-labelledby="activity-item-tab">
	<!-- DataTales Example -->
	<div class="card mt-4 mb-4">
		<div class="card-header py-3">
			<!-- Button trigger modal -->
			<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#add-modal-activity">
				<i class="fas fa-plus"></i>
				<span class="ml-1">Add new activity</span>
			</button>
		</div>
		<div class="card-body">
			<div class="table-responsive">
				<table class="table hover dataTable" width="100%" cellspacing="0">
					<thead>
						<tr>
							<th style="width: 50px;">No</th>
							<th>Name</th>
							<th>Type</th>
							<th>Image</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>
						<% for( let i = 0; i < item.activityId.length; i++ ) { %>
						<tr>
							<td><%= i + 1 %></td>
							<td><%= item.activityId[i].name %></td>
							<td><%= item.activityId[i].type %></td>
							<td><img src="<%= item.activityId[i].imageUrl %>" height="50" alt=""></td>
							<td>
								<form action="/admin/item/<%= item.id %>/activity/<%= item.activityId[i].id %>?_method=DELETE" method="POST">
									<button
										type="button"
										class="btn btn-icon btn-info btn-circle btn-sm btn-update-activity"
										data-toggle="modal"
										data-target="#edit-modal-activity"
										data-id="<%= item.activityId[i].id %>"
										data-name="<%= item.activityId[i].name %>"
										data-type="<%= item.activityId[i].type %>"
										data-image="<%= item.activityId[i].imageUrl %>"
									>
										<i class="fas fa-edit"></i>
									</button>
									<button type="submit" class="btn btn-icon btn-danger btn-circle btn-sm">
										<i class="fas fa-trash"></i>
									</button>
								</form>
							</td>
						</tr>
						<% } %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

<%- include('modal_activity.ejs') %> 
