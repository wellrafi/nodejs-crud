<!-- Modal -->
<div
	class="modal fade"
	id="add-modal-activity"
	tabindex="-1"
	role="dialog"
	aria-hidden="true"
>
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Add new activity</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<form action="/admin/item/<%= item.id %>/activity" method="POST" enctype="multipart/form-data">
				<div class="modal-body">
					<div class="form-group">
						<label for="name">Name</label>
						<input 
							type="text" 
							class="form-control" 
							id="name" 
							name="name" 
							placeholder="Enter name" 
							required
						/>
					</div>
					<div class="form-group">
						<label for="type">Type</label>
						<input 
							type="text" 
							class="form-control" 
							id="type" 
							name="type" 
							placeholder="Enter type" 
							required
						/>
					</div>
					<div class="form-group">
						<label for="name">Image</label>
						<br>
						<button type="button" class="btn btn-primary" onclick="clickImageAddActivity()">
							Choose image
						</button>
						<input 
							style="display: none;"
							type="file" 
							class="form-control" 
							id="imageAddActivity" 
							name="image" 
							placeholder="Enter image" 
						/>
						<script>
							function clickImageAddActivity(){
								let doc = document.getElementById('imageAddActivity');
								doc.click()
							}
						</script>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
					<button type="submit" class="btn btn-primary">Add</button>
				</div>
			</form>
		</div>
	</div>
</div>

