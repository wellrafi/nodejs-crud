<!-- DataTales Example -->
<div class="card mb-4">
	<div class="card-header py-3">
		<!-- Button trigger modal -->
		<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#add-modal-jabatan">
			<i class="fas fa-plus"></i>
			<span class="ml-1">Tambah Jabatan</span>
		</button>
	</div>
	<div class="card-body">
		<div class="table-responsive">
			<table class="table" id="dataTable" width="100%" cellspacing="0">
				<thead>
					<tr>
						<th style="width: 50px;">No</th>
						<th>Name</th>
						<th style="width: 100px;">Action</th>
					</tr>
				</thead>
				<tbody>
					<% for( let i = 0; i < jabatan.length; i++ ) { %>
					<tr>
						<td><%= i + 1 %></td>
						<td><%= jabatan[i].nama %></td>
						<td>
							<form action="/admin/jabatan/<%= jabatan[i].id %>?_method=DELETE" method="POST">
								<button
									type="button"
									class="btn btn-icon btn-warning btn-circle btn-sm btn-update-jabatan"
									data-toggle="modal"
									data-target="#edit-modal-jabatan"
									data-id="<%= jabatan[i].id %>"
									data-name="<%= jabatan[i].nama %>"
								>
									<i class="fas fa-edit"></i>
								</button>
								<button
									type="button"
									data-toggle="modal"
									data-target="#delete-modal-jabatan"
									data-id="<%= jabatan[i].id %>"
									class="btn btn-icon btn-danger btn-circle btn-sm btn-delete-jabatan"
								>
									<i class="fas fa-trash"></i>
								</button>
							</form>
						</td>
					</tr>
					<% } %>
				</tbody>
			</table>
		</div>
	</div>
</div>
