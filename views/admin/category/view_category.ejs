<script>
	$('#dataTable').on('click', '.btn-update-category', function () {
		let id = $(this).data('id');
		let name = $(this).data('name');
		$('#edit-modal-category-name').val(name);
		$('#edit-modal-category-form').attr('action', '/admin/kategori-barang/' + id + '?_method=PUT');
	});
	$('#dataTable').on('click', '.btn-delete-category', function () {
		let id = $(this).data('id');
		$('#delete-modal-category-form').attr('action', '/admin/kategori-barang/' + id + '?_method=DELETE');
	});
</script>
